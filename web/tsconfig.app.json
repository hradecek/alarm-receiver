{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ],
  "paths": {
    "ng2-charts": "node_modules/ng2-charts/bundles/ng2-charts.umd.min.js"
  },
  "packages": {
    "ng2-charts": {
      "main": "ng2-charts.js",
      "defaultExtension": "js"
    }
  }
}
